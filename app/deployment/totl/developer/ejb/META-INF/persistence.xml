<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
<!-- Edit Me: Change the Persistence Unit Name -->
  <persistence-unit name="pollmePU">
  
    <!-- Edit Me: Change the Default Datasource to the deployed datasource JndiName -->
    <jta-data-source>java:/pollmeDS</jta-data-source>
    <properties>
    
    <!-- 
       (Optional) Enable for autocreation of Entity Beans in your database (This option needs DBO access) 
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>  
    -->
    
    <!-- 
        (Optional) Enable when using MSSQL and Opta Drivers
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
    -->
      <property name="hibernate.show_sql" value="true" />
	  <property name="show_sql" value="true" />
    
    </properties>
  </persistence-unit>
  
